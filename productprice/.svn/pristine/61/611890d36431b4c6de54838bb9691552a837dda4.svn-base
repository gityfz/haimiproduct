	<!-- 新增产品 -->
	<insert id="insertProduct" useGeneratedKeys="true" keyProperty="productId"
		parameterType="java.util.HashMap">
		INSERT INTO product
		(product_type,
		product_name,
		<if test="productNameEn != null">
			product_name_en,
		</if>
		<if test="barcode != null">
			barcode,
		</if>
		unit,
		head_img,
		supplier_id,
		country_id,
		brand_id,
		weight,
		check_flag,
		is_top,
		<if test="setTime != null">
			set_time,
		</if>
		master_flag,
		detail_id,
		sell_limit,
		uni_purchase_price,
		uni_refer_price,
		<if test="rateBal != null">
			rate_bal,
		</if>
		<if test="priceBal != null">
			price_bal,
		</if>
		group_flag,
		add_time)
		VALUES (
		#{productType},
		#{productName},
		<if test="productNameEn != null">
			#{productNameEn},
		</if>
		<if test="barcode != null">
			#{barcode},
		</if>
		#{unit},
		#{headImg},
		#{supplierId},
		#{countryId},
		#{brandId},
		#{weight},
		#{checkFlag},
		#{isTop},
		<if test="setTime != null">
			#{setTime},
		</if>
		#{masterFlag},
		#{detailId},
		#{sellLimit},
		#{uniPurchasePrice},
		#{uniReferPrice},
		<if test="rateBal != null">
			#{rateBal},
		</if>
		<if test="priceBal != null">
			#{priceBal},
		</if>
		#{groupFlag},
		#{addTime});
	</insert>
	
	
	<!-- 跨品类复制商品 -->
	<insert id="productCopy" useGeneratedKeys="true" keyProperty="productId"
		parameterType="java.util.HashMap">
		INSERT INTO product
		(id,
		product_master_id,
		<if test="detailId != null">
		detail_id,
		</if>
		product_type,
		product_name,
		product_name_en,
		barcode,
		unit,
		head_img,
		supplier_id,
		country_id,
		brand_id,
		weight,
		master_flag,
		sell_limit,
		uni_purchase_price,
		uni_refer_price,
		add_time)
		VALUES (
		(SELECT MAX(a.id+1) FROM product a),
		<if test="masterProductId == null">
		(SELECT MAX(a.id+1) FROM product a),
		</if>
		<if test="masterProductId != null">
		#{masterProductId},
		</if>
		<if test="detailId != null">
		#{detailId},
		</if>
		#{productType},
		#{productName},
		#{productNameEn},
		#{barcode},
		#{unit},
		#{headImg},
		#{supplierId},
		#{countryId},
		#{brandId},
		#{weight},
		#{masterFlag},
		#{sellLimit},
		#{uniPurchasePrice},
		#{uniReferPrice},
		#{addTime});
	</insert>

	<!-- 新增明细 -->
	<insert id="insertDetail" useGeneratedKeys="true" keyProperty="detailId"
		parameterType="java.util.HashMap">
