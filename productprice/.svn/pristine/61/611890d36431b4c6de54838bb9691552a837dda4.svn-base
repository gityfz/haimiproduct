	<!-- 更新明细 -->
	<update id="updateDetail" parameterType="java.util.HashMap">
		UPDATE 
		detail
		set 
		detail = #{detail}
		WHERE
		id = #{detailId}
		;
	</update>

	<!-- 商品详情查看 -->
	<select id="selectProduct" resultMap="selectProductMap">
		<!-- -->
		SELECT p.* ,c.*,s.*,d.* ,b.*, ca.*, pt.* from product p
		<!--查询商品国家信息 -->
		LEFT JOIN country c on p.country_id=c.country_id
		<!--查询商品供应商信息 -->
		LEFT JOIN supplier s on p.supplier_id=s.id
		<!--查询商品详情信息 -->
		LEFT JOIN detail d on p.detail_id= d.id
		<!--查询商品品牌信息 -->
		LEFT JOIN brand b on p.brand_id =b.id
		<!--查询商品品类信息 -->
		LEFT JOIN product_type pt on p.product_type= pt.product_type
		<!--查询商品分类信息 -->
		LEFT JOIN product_category pc on p.id = pc.product_id
		LEFT JOIN
		category ca on pc.category_id = ca.category_id
		<!--查询条件 -->
		where p.id=#{productId}
		and p.del_flag=0  <!--商品信息删除标志 -->
		and c.del_flag=0  <!--国家信息删除标志 -->
		and s.del_flag=0  <!--供应商信息删除标志 -->
		and d.del_flag=0  <!--详情信息删除标志 -->
		and b.del_flag=0  <!--品牌信息删除标志 -->
		and pt.del_flag=0 <!--品类信息删除标志 -->
		and pc.del_flag=0 <!--商品分类信息删除标志 -->
		and ca.del_flag=0 <!--分类信息删除标志 -->
	</select>

	<!-- 新增商品分类映射关系记录 -->
	<insert id="insertProductCategory" useGeneratedKeys="true" keyProperty="id"
		parameterType="java.util.HashMap">
		INSERT INTO product_category (product_id,category_id,add_time) VALUES
		<foreach collection="categoryList" item="categoryId" index="index" open="" close=""
			separator=",">
			(
			#{productId},
			#{categoryId},
			#{addTime}
			)
		</foreach>
	</insert>
	
	
	
	<!-- 查询商品对应分类映射关系记录 -->
	<select id="selectProductCategory" resultType="java.lang.Integer">
		select p.category_id from product_category p 
		where
		p.product_id = #{productId}
		and 
		p.del_flag = 0
	</select>
	
	<!-- 删除商品对应分类映射关系记录 -->
	<update id="deleteProductCategory" parameterType="java.util.HashMap">
		update product_category p 
		set
		p.del_flag = 1
		where
		<foreach collection="categoryList" item="categoryId" index="index" open="" close=""
			separator="OR">
		p.category_id = #{categoryId}
		</foreach>
		and
		p.del_flag = 0
	</update>


	
  
	
	
	
